<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BA9C5F"
    tools:context=".nepisirsem">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="429dp"
        android:layout_height="31dp"
        android:layout_marginTop="24dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/nepisirHome"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:backgroundTint="#F4DCBF"
                android:text="Anasayfa"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_pisirsem"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:backgroundTint="#DAB68B"
                android:text="Ne Pişirsem"
                android:textSize="10sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:backgroundTint="#F4DCBF"
                android:text="Kaç Kalori"
                android:textSize="10sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:backgroundTint="#DAB68B"
                android:text="Favorilerim"
                android:textSize="10sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ne Pişirsem"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.366" />
</androidx.constraintlayout.widget.ConstraintLayout>